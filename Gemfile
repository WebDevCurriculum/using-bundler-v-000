source "https://rubygems.org" # the Gemfile lets you set up groups so 
# gems are only loaded under specific circumstances 
gem "rspec"
gem "sinatra"
 
group :development do # group options are :development, :test, :production 
  gem "pry" # the do block is followed by all the gems specific to that group
end